<div class="card text-center mx-auto" style="width: 100%">
    <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs">
            <li class="nav-item">
                <NavLink class="nav-link" href=@($"systems") ActiveClass="active" Match="NavLinkMatch.All">System Details</NavLink>
            </li>
            <li class="nav-item">
                <NavLink class="nav-link" href="@($"systems/constellation")" ActiveClass="active" Match="NavLinkMatch.All">Best System In Constellation</NavLink>
            </li>
            <li class="nav-item">
                <NavLink class="nav-link" href="@($"systems/region")" ActiveClass="active" Match="NavLinkMatch.All">Best System In Region</NavLink>
            </li>
            <li class="nav-item">
                <NavLink class="nav-link" href="@($"systems/range")" ActiveClass="active" Match="NavLinkMatch.All">Best System In Range</NavLink>
            </li>
        </ul>
    </div>
    <div class="card-body">
        @(this.ChildContent)
    </div>
</div>

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }
}
