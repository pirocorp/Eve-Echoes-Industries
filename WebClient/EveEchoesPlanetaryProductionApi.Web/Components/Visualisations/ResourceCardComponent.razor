<div class="card text-center mx-auto" style="width: 100%">
    <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs">
            <li class="nav-item">
                <NavLink class="nav-link" href=@($"resources/details") ActiveClass="active" Match="NavLinkMatch.Prefix">Resources Details</NavLink>
            </li>
            <li class="nav-item">
                <NavLink class="nav-link" href="@($"resources/constellation")" ActiveClass="active" Match="NavLinkMatch.Prefix">Best Resources In Constellation</NavLink>
            </li>
            <li class="nav-item">
                <NavLink class="nav-link" href="@($"/resources/region")" ActiveClass="active" Match="NavLinkMatch.Prefix">Best Resources In Region</NavLink>
            </li>
            <li class="nav-item">
                <NavLink class="nav-link" href="@($"resources/range")" ActiveClass="active" Match="NavLinkMatch.Prefix">Best Resources In Range</NavLink>
            </li>
        </ul>
    </div>
    <div class="card-body">
        @(this.ChildContent)
    </div>
</div>

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }
}