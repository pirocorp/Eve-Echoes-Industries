@page "/"
@page "/index.html"

@using EveEchoesPlanetaryProductionApi.Api.Models
@using EveEchoesPlanetaryProductionApi.Services.Data.Models.SolarSystems.GetSolarSystemById
@using EveEchoesPlanetaryProductionApi.Web.Components
@using EveEchoesPlanetaryProductionApi.Web.Components.SolarSystems
@using EveEchoesPlanetaryProductionApi.Web.Components.Loaders

@inject HttpClient http

<div class="container">
    <section class="row">
        @if (this.randomSolarSystem is null)
        {
            <SolarSystemLoader></SolarSystemLoader>
        }
        else
        {
            <SolarSystemDetails SolarSystem="this.randomSolarSystem"></SolarSystemDetails>
        }
    </section>
</div>

<EveInfo RegionsCount="this.regionsCount" ConstellationsCount="this.constellationsCount" SolarSystemCount="this.solarSystemCount"></EveInfo>

@code
{
    private int regionsCount;
    private int constellationsCount;
    private int solarSystemCount;
    private SolarSystemServiceModel randomSolarSystem;

    protected override async Task OnInitializedAsync()
    {
        this.regionsCount = (await this.http.GetFromJsonAsync<CountModel>("api/regions/count"))?.Count ?? 0;

        this.constellationsCount = (await this.http.GetFromJsonAsync<CountModel>("api/constellations/count"))?.Count ?? 0;

        this.solarSystemCount = (await this.http.GetFromJsonAsync<CountModel>("api/solarSystems/count"))?.Count ?? 0;

        this.randomSolarSystem = await this.http.GetFromJsonAsync<SolarSystemServiceModel>("api/SolarSystems");
    }
}
